{
    "name": "vikry/shyffon",
    "description": "NSY PHP Framework Example with HTML5 Boilerplate and Foundation CSS Framework in one package",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vikry Yuansah",
            "email": "admin@kazuyamarino.com"
        }
    ],
	"require": {
        "nesbot/carbon": "^2.31.0",
        "vlucas/phpdotenv": "^3.6.1",
		"nicolab/php-ftp-client": "^1.5.3",
        "optimus/onion": "^1.0"
    },
    "autoload": {
		"psr-4": {
			"System\\": "system/"
        },
        "files": [
			"system/helpers/CodeIgniter_Helpers.php"
		]
    },
    "config": {
        "vendor-dir": "system/vendor/"
    },
	"scripts": {
	    "post-install-cmd": [
			"composer dump-autoload -o",
	        "@nsy_cli_install"
	    ],
	    "nsy_cli_install": [
			"bash INSTALL.sh"
	    ]
	}
}
